{
    "appId": "cn.cnoctave.compare-folders",
    "productName": "compare-folders",
    "buildNumber": "0.1.0",
    "icon": "logo.png",
    "directories": {
        "output": "dist"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "CNOCTAVE",
            "repo": "compare-folders",
            "releaseType": "release"
        }
    ],
    "linux": {
        "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
        "target": [
            {
                "target": "flatpak",
                "arch": [
                    "x64"
                ],
                "options": {
                    "bundle": "cn.cnoctave.marked-reader",
                    "runtime": "org.freedesktop.Platform/x86_64/24.08",
                    "sdk": "org.freedesktop.Sdk/x86_64/24.08",
                    "metadata": {
                        "name": "compare-folders",
                        "description": "compare-folders is an open source Markdown reader packed by Electron",
                        "buildNumber": "0.1.0",
                        "com.github.app.url": "http://cnoctave.cn",
                        "com.github.app.license": "AGPL-3.0-only"
                    },
                    "finishArgs": [
                        "--share=ipc",
                        "--socket=x11",
                        "--socket=pulseaudio",
                        "--share=network"
                    ]
                }
            }
        ]
    }
}